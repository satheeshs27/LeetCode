class Solution {
    public ListNode removeElements(ListNode head, int val) {

        ListNode result = new ListNode(0);
        result.next = head;
        ListNode tail = result;
        while(tail.next != null){
            if(tail.next.val == val)
                tail.next = tail.next.next;
            else
                tail = tail.next;

        }

        return result.next; 
    }
}
